<IfModule mod_rewrite.c>
    RewriteEngine On

    # Si le fichier demandé n'existe pas physiquement, on redirige vers index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

<IfModule mod_headers.c>
    # On force les headers CORS au niveau du serveur pour être sûr (ceinture et bretelles)
    Header set Access-Control-Allow-Origin "*"
</IfModule>